---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import FeatureCard from "@/components/mdx/FeatureCard.astro";
import GitHubStats from "@/components/mdx/GitHubStats.astro";
---

<BaseLayout title="Home">
  <MainCard
    title="Welcome!"
    description="My personal blog and portfolio website"
    textOverlay="HOME"
    infoIcon="lucide:info"
  >
  <div class="space-y-8">
      <!-- Bar 
      <section class="py-6">
        <div class="grid grid-flow-col gap-2">
            <div>
                <h2>
                <a tabindex="0" href="/about">
                <Icon name="lucide:info" class="w-8 h-8 text-primary" />
                <span>About Me</span>
                </a>
                </h2>
            </div>
        </div>
      </section> -->
      <!-- Hero Section -->
      <section class="py-6">
        <div class="flex flex-col items-center text-center">
          <h1 class="text-4xl font-bold mb-4 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent leading-loose">
            Personal Blog | Portfolio | Curriculum
          </h1>
          <p class="text-xl text-base-content/80 max-w-3xl mb-8">
            A site about my blog with unique information, as well as my portfolio and resume.
          </p>
          <div class="flex flex-wrap gap-4 justify-center">
            <a href="/blog" class="btn btn-primary gap-2 btn-shine-effect">
              <Icon name="lucide:book-open" class="w-5 h-5" />
              <span>Explore Blog</span>
            </a>
            <a href="/about" class="btn btn-outline gap-2">
              <Icon name="lucide:info" class="w-5 h-5" />
              <span>Explore About</span>
            </a>
          </div>
        </div>
      </section>
      <!-- GitHub Stats -->
      <section class="py-6">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:github" class="w-6 h-6 text-primary" />
          <span>Latest Repo</span>
        </h2>
        <GitHubStats username="Naster17" repositoryName="esp-ninja" showLanguages={true} showContributors={true} />
      </section>
  </div>
  </MainCard>
</BaseLayout>
