---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import GitHubStats from "@/components/mdx/GitHubStats.astro";
---

<BaseLayout title="About">
  <MainCard
    title="About Naster17"
    description="Low-level dev, Cybersec, Pentester, Embedded electronic lover!"
    textOverlay="ABOUT"
    infoIcon="lucide:user"
  >
    <div class="space-y-10 mb-8">
      <!-- Profile Section -->
      <section class="flex flex-col md:flex-row gap-8 items-center md:items-start">
        <div class="avatar">
          <div
            class="w-32 h-32 md:w-40 md:h-40 rounded-xl ring ring-primary ring-offset-base-100 ring-offset-2 overflow-hidden"
          >
            <img src="https://github.com/Naster17.png" alt="Naster17" width="160" height="160" loading="eager" />
          </div>
        </div>

        <div class="flex-1 text-center md:text-left">
          <h1 class="text-3xl md:text-4xl font-bold mb-2">Naster17</h1>
          <p class="text-xl text-base-content/80 mb-4">Low-level Developer & Cybersec specialist</p>

          <div class="flex flex-wrap gap-3 justify-center md:justify-start mb-6">
            <a
              href="https://github.com/Naster17"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="lucide:github" class="w-4 h-4" />
              <span>GitHub</span>
            </a>
            <a
              href="https://t.me/naster17dev"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="lucide:send" class="w-4 h-4" />
              <span>Telegram</span>
            </a>
          </div>

          <p class="text-base-content/80">
            Hi, I'm Nik. I'm interested in low-level development and really love hardware.
            In the past, also engaged in cybersecurity and penetration testing. 
            I know a lot of interesting topics such as soldering, hacking, neural networks, and much more.
          </p>
        </div>
      </section>


      <!-- Tech Stack -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:code-2" class="w-6 h-6 text-primary" />
          <span>Tech Stack</span>
        </h2>

        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
          {
            [
              { name: "C", icon: "simple-icons:c", color: "oklch(0.6 0.2 230)" },
              { name: "C++", icon: "simple-icons:cplusplus", color: "oklch(0.6 0.2 240)" },
              { name: "Python", icon: "simple-icons:python", color: "oklch(0.6 0.2 250)" },
              { name: "Linux", icon: "simple-icons:linux", color: "oklch(0.83 0.035 183)" },
              { name: "Arduino", icon: "simple-icons:arduino", color: "oklch(0.80 0.1 173)" },
              
              { name: "Git", icon: "simple-icons:git", color: "oklch(0.7 0.2 30)" },

              { name: "HTB", icon: "simple-icons:hackthebox", color: "oklch(0.85 0.31 150)" },

              { name: "Debian", icon: "simple-icons:debian", color: "oklch(0.48 0.18 0)" },
              { name: "Vim", icon: "simple-icons:vim", color: "oklch(0.62 0.12 145)" },
            ].map((tech) => (
              <div class="flex flex-col items-center justify-center p-4 bg-base-200 rounded-lg hover:bg-base-300 transition-colors">
                <div class="text-3xl mb-2" style={`color: ${tech.color}`}>
                  <Icon name={tech.icon} class="w-10 h-10" />
                </div>
                <span class="text-sm font-medium">{tech.name}</span>
              </div>
            ))
          }
        </div>
      </section>
      
      <!-- GitHub Stats -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:github" class="w-6 h-6 text-primary" />
          <span>GitHub Statistics</span>
        </h2>

        <GitHubStats username="Naster17" showLanguages={false} showCommitGraph={true} />
      </section>

    </div>
  </MainCard>
</BaseLayout>
